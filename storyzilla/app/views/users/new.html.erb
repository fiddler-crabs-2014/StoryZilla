<h1>Sign Up</h1>

<%= form_for(@user, html: { class: "signup-in" }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Sign Up" %>
<% end %>
